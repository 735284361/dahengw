/**index.wxss**/
@import "../../templates/recommend-goods-item/recommend-goods-item.wxss";

page {
  min-height: 100%;
  background-color: #f7f7f7;
}

.container {
  width: 100%;
  min-height: 100%;
  background-color: #f7f7f7;
}

.notice {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.notice_swiper {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 40rpx;
  width: 400rpx;
}

.notice_item {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #333;
}

.popup__content {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  text-align: center;
}

.swiper-container {
  width: 750rpx;
  position: relative;
  background-color: white;
}

.swiper_box {
  width: 100%;
  height: 375rpx; /*562.5rpx;*//**/
  overflow: visible;
}

.swiper_item{
  overflow: visible;
  border-radius: 50%;
}

.slide-image {
  /*swiper-item image */
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 375rpx; /*562.5rpx;*/
  border-radius: 15rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.swiper-container .dots {
  position: relative;
  bottom: 10rpx;
  margin: 20rpx 30rpx 0 0;
  display: flex;
  justify-content: flex-end;
}

.swiper-container .dots .dot {
  margin: 0 10rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #999;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  background-color: red;
  opacity: 1;
}

.type-goods{
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.pos-fiexd {
  position: fixed;
  top: 0;
  left: 0;
}

.text-highlight {
  background: #f4f3f3;
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #666666;
}

.icon-container {
  height: 400rpx;
  padding:0rpx 30rpx;
}

.icon-box view:nth-child(5n) {
  float:none;
}

.icon-box {
  margin: 30rpx 15rpx 5rpx 15rpx;
  float: left;
}

.icon-img {
  border-radius: 100%;
  width: 108rpx;
  height: 108rpx;
}

.icon-title {
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}

.nav-box {
  padding: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #fff;
}

.icon-style{
  float: left;
  display: block;
  font-size: 28rpx;
}

.nav-more {
  float: right;
  font-size: 22rpx;
  color: #666666;
}
