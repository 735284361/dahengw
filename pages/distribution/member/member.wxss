page {
  height: 100%;
}
.container {
  width: 100%;
  background: #ECECEC;
  font-size: 30rpx;
  color:#333;
}
.main {
  width: 100%;
  height: 100%;
}
.main .no-data {
  position: absolute;
  top:26%;
  text-align: center;
  width:100%;
}
.mbr-item {
  padding: 6rpx 20rpx;
  background: #fff;
  margin-bottom: 4rpx;
}
.mbr-item .main-box {
  border-bottom: 1rpx solid #EFEFEF;
  height: 100rpx;
  display: flex;
}
.left-img {
  width:90rpx;
  height: 90rpx;
}
.left-img .pic{
  width: 90rpx;
  height: 90rpx;
}
.right-info {
  display: flex;
  flex-direction: column;
  margin-left:30rpx;
  width: 100%;
  height: inherit;
  justify-content: center;
  font-size: 24rpx;
}
.right-info .top {
  margin-bottom: 10rpx;
}
.main-btm {
  height: 30rpx;
  padding:10rpx 20rpx;
  line-height: 30rpx;
  font-size: 28rpx;
}
.btm-left, .btm-right{
  display: inline-block;
  width:50%;
}
.btm-left {
  text-align: left;
}
.btm-right {
  text-align: right;
}