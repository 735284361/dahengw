.container {
  background-color: #f2f2f2;
}

.address-list {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 100rpx;
}

.address-list .a-address {
  width: 720rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
}

.a-address .left-text {
  width: 610rpx;
  box-sizing: border-box;
  padding-left: 58rpx;
}

.a-address .left-text.active {
  background: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/07185eb535ecb77710475a8d5f2e0763.png) no-repeat left center;
  background-size: 28rpx auto;
}

.a-address .left-text .name-tel {
  margin-bottom: 20rpx;
}

.a-address .left-text .address-box {
  font-size: 24rpx;
  color: #888;
  line-height: 36rpx;
}

.a-address .right-edit {
  /*width: 109rpx;
  height: 100%;*/
  padding: 30rpx 50rpx 30rpx 58rpx;
  box-sizing: border-box;
  /*background: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/0c44daedcdbf9e3e0fb95b699d254fba.png) no-repeat 43rpx center;
  background-size: 35rpx auto;*/
}

.bottom-box {
  position: fixed;
  width: 100%;
  bottom: 0;
  font-size: 28rpx;
  color: #000;
  border-top: 1rpx solid #f4f4f4;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
}

.bottom-box .arrow-right {
  background: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/2edbe7b223794b95d566b3d1797ec08d.png) no-repeat 705rpx center;
  background-size: 15rpx auto;
}

.bottom-box .arrow-right .add-btn {
  margin-left: 30rpx;
  padding-left: 70rpx;
  background: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/5dc4238113deed8b474977381b0b8394.png) no-repeat left center;
  background-size: 40rpx auto;
}
