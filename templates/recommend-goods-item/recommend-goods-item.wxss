.goods-container {
  padding:0 20rpx 15rpx 20rpx;
  width: 100%;
  min-height: 100%;
  display: inline-block;
}

.goods-container view:nth-child(2n) {
  margin-right: 0rpx;
}
.goods-box {
  width: 345rpx;
  height: 560rpx;
  background-color: white;
  margin-right: 20rpx;
  margin-top: 15rpx;
  border-radius: 20rpx;
  overflow: hidden;
  float: left;
}

.img-box .image {
  width: 345rpx;
  height: 345rpx;
}

.goods-info-box {
  width: 345rpx;
  padding: 20rpx;
}

.goods-title {
  width: 305rpx;
  height: 70rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: left;
  color: #666666;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price-box {
  width: 305rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
}

.goods-minPrice {
  font-size: 28rpx;
  font-weight: bold;
  color:  #ff4422;
}

.goods-originalPrice {
  padding-left: 10rpx;
  font-size: 24rpx;
}

.sellInformation {
  width: 430rpx;
  height: 45rpx;
  display: flex;
  color: gray;
  font-size: 22rpx;
  margin-top: 20rpx;
}

.goodsSoldNumber {
  width: 40%;
  padding: 5rpx 0;
  text-align: left;
}

.goodsScore {
  overflow: hidden;
  width: 60%;
  padding: 5rpx 0;
  text-align: left;
}
