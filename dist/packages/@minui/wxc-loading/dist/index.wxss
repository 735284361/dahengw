
@keyframes loadingRotate {
    0% {
      transform: rotate(0);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  .loading {
    position: fixed;
    display: flex;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    align-items: center;
    align-content: center;
}
  .loading__image {
    position: relative;
    margin: 0 auto;
    pointer-events: auto;
}
  .loading__image--mgj {
    background-image: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/e9530a4e726fa4b4e765319b7ff041f1.png);
}
  .loading__image--mall {
    background-image: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/6765219f1f5f7650654cf88ed874c30e.png);
}
  .loading__slip {
    animation: loadingRotate 1050ms infinite;
}
  .loading__slip--mgj {
    background-image: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/98b2f2d0690e3959a1460ae68f101624.png);
}
  .loading__slip--mall {
    background-image: url(https://cqyldh.oss-cn-chengdu.aliyuncs.com/files/897de520a680ffe3092926e1de238c6a.png);
}
  .loading__box {
    width: 200rpx;
    height: 200rpx;
    background-repeat: no-repeat;
    background-size: cover;
}